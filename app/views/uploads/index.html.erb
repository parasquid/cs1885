<div class="box">
  <div class="box-title">
    Upload Tracking Numbers
  </div>
  <div class="box-content nopadding">
    <%= form_tag({action: :sales_data}, :multipart => true, :class => 'form-horizontal') do %>
      <div class="control-group">
        <label class="control-label">Upload Sales Data</label>
        <div class="controls">
          <%= file_field_tag :csv %>
          <span class="help-inline">.csv (comma separated values) format file</span>
        </div>
        <div class="form-actions">
          <button type="submit" class="btn btn-primary">
            <i class='icon-circle-arrow-up icon-white'></i> Upload
          </button>
        </div>
      </div>
    <% end %>
  </div>
</div>